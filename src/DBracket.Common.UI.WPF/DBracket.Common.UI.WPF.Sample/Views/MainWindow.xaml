<Window x:Class="DBracket.Common.UI.WPF.Sample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBracket.Common.UI.WPF.Sample.Views"
        xmlns:paths="clr-namespace:DBracket.Common.UI.WPF.Sample.PathExamples"
        xmlns:commonHelpers="clr-namespace:DBracket.Common.UI.WPF.Helpers;assembly=DBracket.Common.UI.WPF"
        xmlns:commonControls="clr-namespace:DBracket.Common.UI.WPF.Controls;assembly=DBracket.Common.UI.WPF"
        xmlns:controlSettings="clr-namespace:DBracket.Common.UI.WPF.Controls.Settings;assembly=DBracket.Common.UI.WPF"
        xmlns:cCS="clr-namespace:DBracket.Common.UI.WPF.Controls.Settings;assembly=DBracket.Common.UI.WPF"
        xmlns:charts="clr-namespace:DBracket.Common.UI.WPF.Charts.Controls;assembly=DBracket.Common.UI.WPF.Charts"
        xmlns:chartComponents="clr-namespace:DBracket.Common.UI.WPF.Charts.Controls.Components;assembly=DBracket.Common.UI.WPF.Charts"
        xmlns:vms="clr-namespace:DBracket.Common.UI.WPF.Sample.ViewModels"
        xmlns:views="clr-namespace:DBracket.Common.UI.WPF.Sample.Views.Examples"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow"
        Height="800"
        Width="1200"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type vms:MainViewModel}}">

    <Window.DataContext>
        <vms:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="DBracket.Colors.Menu.Background">#1E2025</SolidColorBrush>
        <SolidColorBrush x:Key="DBracket.Colors.ContentMenu.Background">#26272B</SolidColorBrush>
        <SolidColorBrush x:Key="DBracket.Colors.ContentMenu.Background.IsSelected">#2B2D31</SolidColorBrush>
        <SolidColorBrush x:Key="DBracket.Colors.ContentMenu.Background.MouseOver">#203E50</SolidColorBrush>
        
        

        <ControlTemplate x:Key="DBracket.Common.UI.Styles.Button.Base2"
                         TargetType="{x:Type Button}">
            <Grid>

                <Border x:Name="PART_Host"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <ContentPresenter x:Name="PART_Content_Host"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </Border>

            </Grid>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="Green" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="TestButton2"
               TargetType="{x:Type Button}">
            <Setter Property="Template"
                    Value="{StaticResource DBracket.Common.UI.Styles.Button.Base2}" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
        </Style>
        <ControlTemplate x:Key="DBracket.Common.UI.Styles.ToggleButton.Base"
                         TargetType="{x:Type ToggleButton}">
            <Grid>

                <Border x:Name="PART_Host"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <ContentPresenter x:Name="PART_Content_Host"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </Border>

                <Popup x:Name="PART_PopUp"
                       IsOpen="{TemplateBinding IsChecked}"
                       Width="250"
                       Height="400">
                    <Grid Background="WhiteSmoke">
                        <TextBlock Text="Test" />

                    </Grid>
                </Popup>
            </Grid>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="Green" />
                </Trigger>

                <Trigger Property="IsChecked"
                         Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation To="250"
                                                 Duration="0:0:0.4"
                                                 Storyboard.TargetName="PART_PopUp"
                                                 Storyboard.TargetProperty="Width" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation To="0"
                                                 Duration="0:0:0.4"
                                                 Storyboard.TargetName="PART_PopUp"
                                                 Storyboard.TargetProperty="Width" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="TestToggleButton"
               TargetType="{x:Type ToggleButton}">
            <Setter Property="Template"
                    Value="{StaticResource DBracket.Common.UI.Styles.ToggleButton.Base}" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
        </Style>

        
        
        
        <Style TargetType="{x:Type commonControls:SideMenuItem}"
               BasedOn="{StaticResource DBracket.Common.UI.WPF.SideMenuItem}">
            <Setter Property="Background"
                    Value="{DynamicResource ResourceKey=DBracket.Colors.Menu.Background}" />        
            <!--<Setter Property="Background"
                    Value="{DynamicResource ResourceKey=DBracket.Colors.Menu.Background}" />-->

            
            <Setter Property="cCS:SideMenuItemSettings.IsSelectedBrush"
                    Value="{DynamicResource DBracket.Colors.ContentMenu.Background.IsSelected}" />
            <Setter Property="cCS:SideMenuItemSettings.MouseOverBrush"
                    Value="{DynamicResource DBracket.Colors.ContentMenu.Background.MouseOver}" />
        </Style>

        <Style TargetType="{x:Type commonControls:SideMenuItemSeparator}"
               BasedOn="{StaticResource DBracket.Common.UI.WPF.SideMenuItemSeparator}">
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style TargetType="{x:Type commonControls:SideMenu}"
               BasedOn="{StaticResource DBracket.Common.UI.WPF.SideMenu}">

        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource ResourceKey=DBracket.Colors.Menu.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Background="{DynamicResource ResourceKey=DBracket.Colors.Menu.Background}">
            <commonControls:SideMenu Style="{StaticResource DBracket.Common.UI.WPF.SideMenu}"
                                     VerticalAlignment="Stretch"
                                     Margin="0,30,0,0"
                                     Width="400">
                <commonControls:SideMenu.Items>
                    <commonControls:SideMenuItem Header="DBracket.Common.UI.WPF"
                                                 Command="{Binding MenuCommand}"
                                                 CommandParameter="DBracket.Common.UI.WPF">
                        <commonControls:SideMenuItem.IconContent>
                            <commonControls:Icon IconType="Accept_PicolIcons" 
                                                 Width="15"
                                                 Height="15"/>
                        </commonControls:SideMenuItem.IconContent>

                        <commonControls:SideMenuItem.SubItems>
                            <commonControls:SideMenuItem Header="Controls"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="DBracket.Common.UI.WPF_Controls">
                                <commonControls:SideMenuItem.SubItems>
                                    <commonControls:SideMenuItem Header="Namespaces"
                                                                 Command="{Binding MenuCommand}"
                                                                 CommandParameter="DBracket.Common.UI.WPF_Controls_Namespaces" />
                                    <commonControls:SideMenuItem Header="Buttons"
                                                                 Command="{Binding MenuCommand}"
                                                                 CommandParameter="DBracket.Common.UI.WPF_Controls_Buttons" />
                                    <commonControls:SideMenuItem Header="TextBoxes"
                                                                 Command="{Binding MenuCommand}"
                                                                 CommandParameter="DBracket.Common.UI.WPF_Controls_TextBoxes" />
                                </commonControls:SideMenuItem.SubItems>
                            </commonControls:SideMenuItem>
                            <commonControls:SideMenuItem Header="Helpers"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="DBracket.Common.UI.WPF_Helpers" />
                            <commonControls:SideMenuItem Header="Converter"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="DBracket.Common.UI.WPF_Converter" />
                        </commonControls:SideMenuItem.SubItems>
                    </commonControls:SideMenuItem>


                    
                    
                    

                    <commonControls:SideMenuItemSeparator Margin="0,20,0,2"
                                                          Foreground="{DynamicResource ResourceKey=DBracket.Colors.ContentMenu.Background.IsSelected}" />

                    <commonControls:SideMenuItem Header="DBracket.Common.UI.WPF.Charts"
                                                 Command="{Binding MenuCommand}"
                                                 CommandParameter="DBracket.Common.UI.WPF.Charts">
                        <commonControls:SideMenuItem.IconContent>
                            <commonControls:Icon IconType="Accept_PicolIcons"
                                                 Width="15"
                                                 Height="15" />
                        </commonControls:SideMenuItem.IconContent>
                    </commonControls:SideMenuItem>

                    <commonControls:SideMenuItem Header="Test3"
                                                 Command="{Binding MenuCommand}"
                                                 CommandParameter="Test3">
                        <commonControls:SideMenuItem.IconContent>
                            <commonControls:Icon IconType="Accept_PicolIcons"
                                                 Width="15"
                                                 Height="15" />
                        </commonControls:SideMenuItem.IconContent>

                        <commonControls:SideMenuItem.SubItems>
                            <commonControls:SideMenuItem Header="Test3-1"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="Test3-1">
                                <commonControls:SideMenuItem.SubItems>
                                    <commonControls:SideMenuItem Header="Test3-1-1"
                                                                 Command="{Binding MenuCommand}"
                                                                 CommandParameter="Test3-1-1" />
                                    <commonControls:SideMenuItem Header="Test3-1-2"
                                                                 Command="{Binding MenuCommand}"
                                                                 CommandParameter="Test3-1-2" />
                                </commonControls:SideMenuItem.SubItems>
                            </commonControls:SideMenuItem>
                            <commonControls:SideMenuItem Header="Test3-2"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="Test3-2" />
                            <commonControls:SideMenuItem Header="Test3-3"
                                                         Command="{Binding MenuCommand}"
                                                         CommandParameter="Test3-3" />
                        </commonControls:SideMenuItem.SubItems>
                    </commonControls:SideMenuItem>

                    <commonControls:SideMenuItem Header="Prototypes"
                                                 Command="{Binding MenuCommand}"
                                                 CommandParameter="Prototypes">
                        <commonControls:SideMenuItem.IconContent>
                            <commonControls:Icon IconType="Accept_PicolIcons"
                                                 Width="15"
                                                 Height="15" />
                        </commonControls:SideMenuItem.IconContent>
                    </commonControls:SideMenuItem>
                </commonControls:SideMenu.Items>
            </commonControls:SideMenu>
        </Grid>


        
        <Border CornerRadius="20"
                Margin="8,20,8,20"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource ResourceKey=DBracket.Colors.ContentMenu.Background}">

            <ScrollViewer Style="{StaticResource DBracket.Common.UI.WPF.ScrollViewer}"
                          Margin="0,20,0,20"
                          controlSettings:ScrollViewerSettings.VerticalScrollBarScrollPageButtonBorderBrush="Gray">
                <StackPanel>
