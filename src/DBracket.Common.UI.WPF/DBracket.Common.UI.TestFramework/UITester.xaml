<Window x:Class="DBracket.Common.UI.TestFramework.UITester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBracket.Common.UI.TestFramework"
        xmlns:commonConverter="clr-namespace:DBracket.Common.UI.WPF.Converter;assembly=DBracket.Common.UI.WPF"
        mc:Ignorable="d"
        Title="UITester"
        Height="1200"
        Width="1680"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type local:UITesterViewModel}}">

    <Window.Resources>
        <commonConverter:NullToBoolConverter x:Key="NullToBoolVis" />
    </Window.Resources>    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--Windows-->
        <Grid>
            <ListBox ItemsSource="{Binding WindowsToTest}"
                     SelectedItem="{Binding SelectedWindowToTest}"
                     Grid.Row="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,1"
                                    Background="WhiteSmoke"
                                    Width="280">
                            <TextBlock Text="Window:" />
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Type}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <!--Test Menus-->
        <Grid Grid.Column="2"
              IsEnabled="{Binding SelectedWindowToTest, Converter={StaticResource NullToBoolVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!--TestSequences-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="TestSequences" />

                <ListBox ItemsSource="{Binding SelectedWindowToTest.TestSequences}"
                         SelectedItem="{Binding SelectedTestSequence}"
                         Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="2">
                    <Button Content="+"
                            Width="40"
                            Height="40"
                            Command="{Binding Commands}"
                            CommandParameter="AddTestSequence" />
                </StackPanel>
            </Grid>

            
            <!--Tests-->
            <Grid Grid.Column="2"
                  IsEnabled="{Binding SelectedTestSequence, Converter={StaticResource NullToBoolVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Tests" />

                <ListBox ItemsSource="{Binding SelectedTestSequence.Tests}"
                         Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="2">
                    <Button Content="+"
                            Width="40"
                            Height="40"
                            Command="{Binding Commands}"
                            CommandParameter="AddTest" />
                </StackPanel>
            </Grid>


            <!--Test Event Logs-->
            <Grid Grid.Column="4"
                  IsEnabled="{Binding SelectedTestSequence, Converter={StaticResource NullToBoolVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Test Event Logs" />

                <ListBox ItemsSource="{Binding SelectedTest.Result}"
                         Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="2">
                    <Button Content="+"
                            Width="40"
                            Height="40"
                            Command="{Binding Commands}"
                            CommandParameter="ExecuteEvent" />
                </StackPanel>
            </Grid>
        </Grid>
  
        <!--Window EventLogs-->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="EventLog" />

            <ListBox ItemsSource="{Binding EventLog}"
                     SelectedItem="{Binding SelectedEvent}"
                     Grid.Row="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,1"
                                    Background="WhiteSmoke"
                                    Width="280">
                            <TextBlock Text="Event:" />
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Description}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>