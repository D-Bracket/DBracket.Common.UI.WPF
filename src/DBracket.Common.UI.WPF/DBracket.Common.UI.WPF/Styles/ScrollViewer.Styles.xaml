<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DBracket.Common.UI.WPF.Controls"
                    xmlns:controlSettings="clr-namespace:DBracket.Common.UI.WPF.Controls.Settings">

    <Style x:Key="ScrollBarThumb"
           TargetType="{x:Type Thumb}">
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Setter Property="IsTabStop"
                Value="false" />
        <Setter Property="Focusable"
                Value="false" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border CornerRadius="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ScrollBarPageButton"
           TargetType="{x:Type controls:RepeatButton}">
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Setter Property="IsTabStop"
                Value="false" />
        <Setter Property="Focusable"
                Value="false" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RepeatButton}">
                    <Border Background="Transparent"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="{TemplateBinding CornerRadius}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--#region VerticalScrollBar-->
    <Style x:Key="ScrollBarLineButtonDown"
           TargetType="{x:Type controls:RepeatButton}">
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RepeatButton}">
                    <Border x:Name="PART_Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <controls:ColorAnimator x:Name="COMPONENT_PathAnimator"
                                                    Duration="0:0:0.5"
                                                    ColorDefault="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=(controlSettings:ScrollViewerSettings.VerticalScrollBarScrollButtonColorDefault)}"
                                                    ColorAnimatedTarget="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=(controlSettings:ScrollViewerSettings.VerticalScrollBarScrollButtonColorMouseOver)}" />

                            <Path StrokeThickness="0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path.Fill>
                                    <SolidColorBrush x:Name="FillBrush"
                                                     Color="{Binding ElementName=COMPONENT_PathAnimator, Path=ColorOutput}" />
                                </Path.Fill>

                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="Figure"
                                                    StartPoint="0,0">
                                            <LineSegment x:Name="Line1"
                                                         Point="5,8" />
                                            <LineSegment x:Name="Line2"
                                                         Point="10,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="COMPONENT_PathAnimator"
                                    Property="IsTriggered"
                                    Value="True" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

