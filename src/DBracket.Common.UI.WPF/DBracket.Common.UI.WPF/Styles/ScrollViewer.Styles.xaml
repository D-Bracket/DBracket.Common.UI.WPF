    <Style TargetType="{x:Type controls:ScrollBar}"
           x:Key="VerticalScrollBarStyle">
        <Setter Property="IsScrollViewerMouseOver"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ScrollBar}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Up Button -->
                        <controls:RepeatButton Style="{StaticResource ScrollBarLineButtonUp}"
                                               x:Name="PART_ScrollUpButton"
                                               Grid.Row="0"
                                               Command="ScrollBar.LineUpCommand"
                                               Height="16"
                                               Opacity="0"
                                               Margin="0,0,0,0"
                                               Width="Auto"
                                               Background="Transparent"
                                               Foreground="{TemplateBinding ScrollButtonForeground}" />

                        <!--
                        Rectangle, so that the user doesn't have to aim for the small track 
                        (as soon as the users mouse enters the rectangle the width of the track is expanded)
                        -->
                        <Rectangle Fill="Transparent"
                                   Grid.Row="1"
                                   Width="Auto"
                                   VerticalAlignment="Stretch" />

                        <!-- Thumb -->
                        <Track x:Name="PART_Track"
                               Grid.Row="1"
                               Width="6"
                               IsDirectionReversed="true">
                            <Track.DecreaseRepeatButton>
                                <controls:RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                                       BorderBrush="{TemplateBinding ScrollPageButtonBorderBrush}"
                                                       Background="{TemplateBinding ScrollPageButtonBackground}"
                                                       CornerRadius="{TemplateBinding ScrollPageButtonCornerRadius}"
                                                       x:Name="PART_PageUpButton"
                                                       Command="ScrollBar.PageUpCommand"
                                                       IsTabStop="False" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb x:Name="PART_Thumb"
                                       Style="{StaticResource ScrollBarThumb}"
                                       Background="Gray"
                                       BorderThickness="0"
                                       Height="Auto">
                                </Thumb>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <controls:RepeatButton Style="{StaticResource ScrollBarPageButton}"
                                                       x:Name="PART_PageDownButton"
                                                       BorderBrush="{TemplateBinding ScrollPageButtonBorderBrush}"
                                                       Background="{TemplateBinding ScrollPageButtonBackground}"
                                                       CornerRadius="{TemplateBinding ScrollPageButtonCornerRadius}"
                                                       Command="ScrollBar.PageDownCommand"
                                                       IsTabStop="False" />
                            </Track.IncreaseRepeatButton>
                        </Track>

                        <!-- Down Button -->
                        <controls:RepeatButton x:Name="PART_ScrollDownButton"
                                               Style="{StaticResource ScrollBarLineButtonDown}"
                                               Grid.Row="2"
                                               Command="ScrollBar.LineDownCommand"
                                               BorderThickness="0"
                                               Opacity="0"
                                               Height="16"
                                               Width="Auto"
                                               Background="Transparent">
                        </controls:RepeatButton>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="00:00:00.050"
                                                         Storyboard.TargetName="PART_PageUpButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1.0" />
                                        <DoubleAnimation Duration="00:00:00.050"
                                                         Storyboard.TargetName="PART_PageDownButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1.0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="00:00:00.300"
                                                         Storyboard.TargetName="PART_PageUpButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1.0"
                                                         To="0.0" />
                                        <DoubleAnimation Duration="00:00:00.300"
                                                         Storyboard.TargetName="PART_PageDownButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1.0"
                                                         To="0.0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="PART_Track"
                                    Property="Width"
                                    Value="12" />
                        </Trigger>



                        <Trigger Property="IsScrollViewerMouseOver"
                                 Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="00:00:00.050"
                                                         Storyboard.TargetName="PART_ScrollUpButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1.0" />
                                        <DoubleAnimation Duration="00:00:00.050"
                                                         Storyboard.TargetName="PART_ScrollDownButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1.0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="00:00:00.300"
                                                         Storyboard.TargetName="PART_ScrollUpButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1.0"
                                                         To="0.0" />
                                        <DoubleAnimation Duration="00:00:00.300"
                                                         Storyboard.TargetName="PART_ScrollDownButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1.0"
                                                         To="0.0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <!--<Setter TargetName="PART_ScrollUpButton"
                                    Property="Opacity"
                                    Value="1.0" />
                            <Setter TargetName="PART_ScrollDownButton"
                                    Property="Opacity"
                                    Value="1.0" />-->
                        </Trigger>

                        <!--<Trigger Property="IsScrollViewerMouseOver"
                                 Value="False">
                            <Setter TargetName="PART_ScrollUpButton"
                                    Property="Opacity"
                                    Value="0.0" />
                            <Setter TargetName="PART_ScrollDownButton"
                                    Property="Opacity"
                                    Value="0.0" />
                        </Trigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->


